@import "../../styles/animation.wxss";
.message-area {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 99;
}

.message {
  box-sizing: border-box;
  position: fixed;
  z-index: 999;
  left: 50%;
  top: 50%;
  width: 250rpx;
  height: 250rpx;
  padding: 20rpx;
  margin-top: -125rpx;
  margin-left: -125rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  border-radius: 16rpx;
  background-color: rgba(0, 0, 0, .75);
  color: #fff;
  animation: fadeIn .6s;
}

.message-icon {
  height: 100rpx;
  width: 100rpx;
  background-position: center;
  background-repeat: no-repeat;
  background-size: 100rpx;
}

.message-icon-offline {
  background-image: url(data:image/png;base64,);
}

.message-icon-null {
  background-image: url(data:image/png;base64,);
}

.message-icon-success {
  background-image: url('data:image/png;base64,');
}


.message-content {
  margin-top: 15rpx;
  text-align: center;
}